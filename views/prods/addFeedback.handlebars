<link rel="stylesheet" href="/public/css/products/prod.css">
<h1>Add feedback</h1>
<div class="product">
<form action="/prod/addComment/{{id}}" method="POST">
    <div class="form-group">
    <label>
        Feedback
        <input type="text" name="comment" placeholder="Feedback" value="{{prod.comment}}"/>
    </label>
    </div>
    <button type="submit" class="button button4">Add</button>
</form>
</div>
{{#if hasErrors}}
<ul>
    {{#each errors}}
    <li>
        {{this}}
    </li>
    {{/each}}
</ul>
{{/if}}