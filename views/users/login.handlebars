<link rel="stylesheet" href="/public/css/users/users.css">

<div class="container">
    <div class="row">
        <div class="col-md-8 col-sm-12 col-md-offset-2">

            <div class="panel panel-default">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        
                        <div class="panel-body">
                            <div class="login">
                                <form class= "form-horizontal" action="/users/login" method="post" id="login-form">

                                    <div class="form-group">
                                    <label class="control-label">Email ID:</label>
                                    <div>
                                    <input type="text" class="form-control" name="email" placeholder="Email ID" value="{{login.email}}">
                                    </div>
                                    </div>

                                    <div class="form-group">
                                    <label class="control-label">Password:</label>
                                    <div>
                                    <input type="password"  class="form-control" name="password" placeholder="Password" value="{{login.password}}">
                                    </div>
                                    </div>

                                    <div class="form-group text-center">
                                        <button type="submit" class="button button4">Login</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>