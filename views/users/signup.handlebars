<link rel="stylesheet" href="/public/css/users/users.css">

<div class="container">
    <div class="row">
        <div class="col-md-8 col-sm-12 col-md-offset-2">
            <div class="panel panel-default">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div class="panel-body">
                            <div class="register">
                                <form class= "form-horizontal" action="/users" method="post" id="login-form">

                                    <div class="form-group">
                                    <label class="control-label">First Name:</label>
                                    <div>
                                    <input type="text" name="fname" class="form-control" placeholder="First name">
                                    </div>
                                    </div>

                                    <div class="form-group">
                                    <label class="control-label">Last Name:</label>
                                    <div>
                                    <input type="text" name="lname" class="form-control" placeholder="Last name">
                                    </div>
                                    </div>

                                    <div class="form-group">
                                    <label class="control-label">Email:</label>
                                    <div>
                                    <input type="text" name="email" id="email" class="form-control" placeholder="Email">
                                    <div id="emailID_alert"></div>
                                    </div>
                                    </div>

                                    <div class="form-group">
                                    <label class="control-label">Password:</label>
                                    <div>
                                    <input type="password"  class="form-control" name="password" placeholder="password">
                                    </div>
                                    </div>

                                    <div class="form-group">
                                    <label class="control-label">Address:</label>
                                    <div>
                                    <input type="text" name="address" class="form-control" placeholder="Address">
                                    </div>
                                    </div>

                                    <div class="form-group">
                                    <label class="control-label">Allergy:</label>
                                    <div>
                                    <input type="text" name="allergy" class="form-control" placeholder="Allergy">
                                    </div>
                                    </div>

                                    <div class="form-group">
                                    <label class="control-label">Mobile Number:</label>
                                    <div>
                                    <input type="number" name="mobile" class="form-control" placeholder="Mobile Number">
                                    </div>
                                    </div>

                                    <div class="form-group text-center">
                                    <button type="submit" class="button button4">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/public/js/register.js"></script>