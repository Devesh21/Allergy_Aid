<link rel="stylesheet" href="/public/css/products/prod.css">
  
<h1>AddItem</h1>
<div class="product">
    
<form action="/prod/addItem/{{{storeId}}}" method="POST">
    <div class="form-group">
    <label>
        Product Name :
        <input type="text" name="Pname" placeholder="Product Name" value="{{prod.Pname}}"/>
    </label>
    </div>

    <div class="form-group">
    <label>
        Ingredients :
        <input type="text" name="ingredients" placeholder="Ingredients" value="{{prod.ingredients}}"/>
    </label>
    </div>

    <div class="form-group">
    <label>
        Description :
        <input type="text" name="description" placeholder="Description" value="{{prod.description}}"/>
    </label>
    </div>
    <button type="submit" class="button button4">Add</button>
</form>
{{#if hasErrors}}
<ul>
    {{#each errors}}
    <li>
        {{this}}
    </li>
    {{/each}}
</ul>
{{/if}}